{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "src/components/modals/AddCourse.tsx", "src/components/modals/CourseDetails.jsx", "src/components/modals/EnrollStudent.jsx", "src/components/cards/Category.jsx", "src/app/[slug]/page.jsx", "src/components/Wallet.jsx", "src/components/date-time-pickers/TimePicker.jsx", "src/components/modals/GoPremuium.jsx", "src/app/tutor/plans/components/plans.sx"],
  "exclude": ["node_modules"]
}
